{
  "name": "petersalvato-com",
  "version": "1.0.0",
  "description": "Peter Salvato portfolio site",
  "scripts": {
    "scss:build": "sass assets/css/styles.scss assets/css/styles.css",
    "scss:watch": "sass --watch assets/css:assets/css",
    "css:build": "tailwindcss -i assets/css/tailwind.css -o assets/css/tailwind-output.css",
    "css:watch": "tailwindcss -i assets/css/tailwind.css -o assets/css/tailwind-output.css --watch"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.17",
    "postcss": "^8.4.32",
    "sass": "^1.70.0",
    "tailwindcss": "^3.4.1"
  }
}
